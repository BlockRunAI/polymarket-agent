# =============================================================================
# POLYMARKET AI AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------

# Base Chain Wallet - Used for AI payments via BlockRun
# Your private key is used locally to sign payment authorizations
# The key never leaves your machine - only signatures are sent
BASE_CHAIN_WALLET_KEY=0x...your_base_wallet_private_key_here

# Polygon Chain Wallet - Used for Polymarket trading
# This wallet will hold USDC for placing bets on Polymarket
POLYGON_WALLET_PRIVATE_KEY=0x...your_polygon_wallet_private_key_here

# -----------------------------------------------------------------------------
# TRADING PARAMETERS
# -----------------------------------------------------------------------------

# Starting bankroll in USD (for position sizing calculations)
INITIAL_BANKROLL=100

# Maximum bet size as fraction of bankroll (0.05 = 5%)
MAX_BET_PERCENTAGE=0.05

# Minimum edge required before placing a bet (0.15 = 15% edge)
MIN_EDGE_PERCENTAGE=0.15


# Dashboard Login (Basic Auth)
ADMIN_USER=
ADMIN_PASS=
# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# Flask secret key for session management
FLASK_SECRET_KEY=your_random_secret_key_here


